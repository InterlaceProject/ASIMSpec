CoreASIM agent

use Standard

init Start

scheduling whileRunning

policy whileRunning = skip

rule Start = {
	program(self) := Program
}

rule CreditReviewReq(req_params) = {
	print "request params: " + req_params
}

rule Program = {
	print "checking inbox"

    choose m in inboxOf(self) with getMessageSubject(m)="CreditReviewRequest" do {
    	content := getMessageContent(m)
    	print content
    	CreditReviewReq(content)
    }
}
