CoreASIM scheduler

use Standard

init Start

controlled counter:INTEGER

scheduling whileRunning

policy whileRunning = {
	schedule client
	schedule server
	//schedule self
}

rule Start = {
	print "------------------scheduler init"
	counter := 0
	program(self) := Program
}

rule Program = {
	print "------------------tick: " + counter
	counter := counter + 1
}
